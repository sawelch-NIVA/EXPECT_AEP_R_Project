@article{pop00031,
  title = {The Exposome and Toxicology: A Win--Win Collaboration},
  author = {Barouki, Robert and Audouze, Karine and Becker, Chrystel and Bl{\'a}ha, Lud{\v e}k and Coumoul, Xavier and Karakitsios, Spyros and Kl{\'a}nov{\'a}, Jana and Miller, Gary W. and Price, Elliott J. and Sarigiannis, Dimosthenis},
