}

@article{pop00063,
  title = {Patterns of Household and Personal Care Product Use by the Korean Population: Implications for Aggregate Human Exposure and Health Risk},
  author = {Han, Eun-Jeong and Choi, KeunOh and Sim, Seunghye and Choi, Junyeong and Uhm, Yoonhee and Kim, Soonbok and Lim, Eun-Kyung and Lee, Young-Joo},
  year = {2020},
