  title = {Comprehensive Assessment of Copper's Effect on Marine Organisms under Ocean Acidification and Warming in the 21st Century},
  author = {Cui, Liang and Cheng, Chen and Li, Xiaoguang and Gao, Xiangyun and Lv, Xubo and Wang, Yan and Zhang, Hua and Lei, Kun},
