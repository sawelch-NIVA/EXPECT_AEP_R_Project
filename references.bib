@article{hansenUsePAHMetabolite2020,
  title = {The Use of {{PAH}}, Metabolite and Lipid Profiling to Assess Exposure and Effects of Produced Water Discharges on Pelagic Copepods},
  author = {Hansen, Bj{\o}rn Henrik and S{\o}rensen, Lisbet and St{\o}rseth, Trond R. and Altin, Dag and Gonzalez, Susana Villa and Skancke, J{\o}rgen and R{\o}nsberg, Marianne Unaas and Nordtug, Trond},
  year = {2020},
  month = apr,
  journal = {Science of The Total Environment},
  volume = {714},
  pages = {136674},
  issn = {0048-9697},
  doi = {10.1016/j.scitotenv.2020.136674},
  urldate = {2025-01-21},
  abstract = {Several laboratory studies have demonstrated that exposure to oil components cause toxicity to copepods, however, this has never been shown in natural populations of copepods. In the present study, we sampled copepods in an area of the North Sea with high density of oil production platforms discharging produced water. Environmental modelling was used to predict produced water and copepod trajectories prior to copepod sampling in situ. To maximise output from a minimal number of field samples, a novel and combined methodology was developed to allow exploitation of the same extract for several purposes; contaminant body burden, lipidomics, and metabolomics analysis. PAH body burdens were low compared to laboratory experiments where correlations between PAH body burden and acute toxicity, reproduction and molecular endpoints had been established. Still, station-specific PAH profiles strongly indicated copepod exposure to PW. NMR metabolomics, focusing on water-soluble metabolites, suggested no correlation between metabolites and stations. Interestingly, lipidomics analyses suggested site-specific fingerprints and profiles displayed for acyl-glycerols and wax esters. Potential effects of produced water exposure on lipid metabolism in copepods cannot be ruled out and deserves more attention. Our study exemplifies the importance of incorporating novel and improved analytical methodologies in environmental monitoring.},
  keywords = {,/done,Biota/invert/copepod,Chemicals/PAHs,ObsCite},
  annotation = {TLDR: This study sampled copepods in an area of the North Sea with high density of oil production platforms discharging produced water and found that PAH body burdens were low compared to laboratory experiments, still, station-specific PAH profiles strongly indicated copepod exposure to PW.\\
remark: Omics for PAH exposure to copepods showed little of any interest.},
  file = {C\:\\Users\\SAW\\OneDrive - NIVA\\Documents\\04 - Library\\Literature\\SÃ¸rensen et al. - 2020 - Accumulation and toxicity of monoaromatic petroleum hydrocarbons in early life stages of cod and had.pdf;C\:\\Users\\SAW\\Zotero\\storage\\XDVUATMA\\S0048969720301844.html}
}

