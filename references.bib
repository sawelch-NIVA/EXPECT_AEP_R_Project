@article{kikuchirFieldSurveystaroeLake2009,
  title = {A Field Survey-Staroe Lake Suffering from Atmospheric Deposition in the Region North of the Arctic Circle},
  author = {{Kikuchi R} and {Gorbacheva TT}},
  year = {2009},
  journal = {Environ Sci Pollut Res Int},
  volume = {16},
