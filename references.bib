  author = {Scholz, Stefan and Nichols, John W. and Escher, Beate I. and Ankley, Gerald T. and Altenburger, Rolf and Blackwell, Brett R. and Brack, Werner and Burkhard, Lawrence P. and Collette, Timothy W. and Doering, Jon A. and Ekman, Drew R. and Fay, Kellie A. and Fischer, Fabian C. and Hackerm{\"u}ller, J{\"o}rg and Hoffman, Joel C. and Lai, Chih and Leuthold, David and Martinovi{\'c}-Weigelt, Dalma and Reemtsma, Thorsten and Pollesch, Nathan and Schroeder, Anthony and Sch{\"u}{\"u}rmann, Gerrit and {von Bergen{\dbend}}, Martin},
